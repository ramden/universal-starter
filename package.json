{
  "name": "universal-starter",
  "version": "0.0.0",
  "lint-staged": {
    "src/**/*.{ts,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest --coverage --config ./src/test/jest.conf.js",
    "lint": "ng lint",
    "e2e": "cypress run",
    "prettier:preview": "yarn prettier \"**/*.{ts,js,css,scss}\"",
    "prettier:write": "yarn prettier --write \"**/*.{ts,js,css,scss}\"",
    "cypress:open": "cypress open"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.2",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "codelyzer": "~4.2.1",
    "cypress": "^3.0.3",
    "jest": "^23.4.2",
    "jest-junit": "^5.1.0",
    "jest-preset-angular": "^6.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "~2.7.2"
  },
  "jestSonar": {
    "reportPath": "dist/test-results/jest",
    "reportFile": "TESTS-results-sonar.xml"
  }
}
